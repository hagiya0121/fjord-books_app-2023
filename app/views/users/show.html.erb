<h1><%= t('views.common.title_show', name: User.model_name.human) %></h1>
<ul>
  <li class="show-item"><%= User.human_attribute_name(:id) %>: <%= @user.id %></li>
  <li class="show-item"><%= User.human_attribute_name(:email) %>: <%= @user.email %></li>
  <li class="show-item"><%= User.human_attribute_name(:postal_code) %>: <%= @user.postal_code %></li>
  <li class="show-item"><%= User.human_attribute_name(:address) %>: <%= @user.address %></li>
  <li class="show-item"><%= User.human_attribute_name(:self_introduction) %>: <%= @user.self_introduction %></li>
</ul>
